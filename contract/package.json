{
    "name": "radishield-contracts",
    "version": "1.0.0",
    "scripts": {
        "compile": "hardhat compile",
        "test": "hardhat test",
        "test:flare": "hardhat test test/Flare*.test.js --network flareTestnet",
        "test:flare:local": "hardhat test test/Flare*.test.js",
        "test:flare:simple": "hardhat test test/FlareSimple.test.js --network flareTestnet",
        "test:flare:core": "hardhat test test/FlareCore.test.js --network flareTestnet",
        "test:flare:working": "hardhat test test/FlareCore.test.js test/FlareSimple.test.js test/FlareWorkingInsurance.test.js --network flareTestnet",
        "deploy": "hardhat deploy",
        "deploy:flare": "hardhat deploy --network flareTestnet --tags flare",
        "deploy:polygon": "hardhat deploy --network polygonAmoy",
        "size": "hardhat size-contracts",
        "coverage": "hardhat coverage",
        "lint": "solhint 'contracts/**/*.sol'",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@chainlink/contracts": "^1.4.0",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
        "@nomicfoundation/hardhat-ethers": "^3.0.2",
        "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
        "@nomicfoundation/hardhat-verify": "^2.1.1",
        "@openzeppelin/contracts": "^5.4.0",
        "chai": "^4.3.10",
        "dotenv": "^17.1.0",
        "ethers": "^6.15.0",
        "hardhat": "^2.25.0",
        "hardhat-contract-sizer": "^2.10.0",
        "hardhat-deploy": "^0.12.4",
        "hardhat-gas-reporter": "^2.3.0",
        "prettier": "^3.6.2",
        "prettier-plugin-solidity": "^2.0.0",
        "solhint": "^6.0.0",
        "solidity-coverage": "^0.8.16"
    },
    "dependencies": {
        "axios": "^1.12.2"
    }
}
